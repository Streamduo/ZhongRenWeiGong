<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.lijiankun24.shadowlayout.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:shadowColor="#309B9B9B"
            app:shadowDx="@dimen/distance_dp_2"
            app:shadowDy="@dimen/distance_dp_2"
            app:shadowRadius="@dimen/distance_dp_10"
            app:shadowShape="rectangle"
            app:shadowSide="all">

            <RelativeLayout
                android:id="@+id/rl_shibie"
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_dp_195"
                android:layout_marginLeft="@dimen/distance_dp_2"
                android:layout_marginRight="@dimen/distance_dp_2"
                android:background="@drawable/bg_bac_white_10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/shibie" />

            </RelativeLayout>
        </com.lijiankun24.shadowlayout.ShadowLayout>

        <com.lijiankun24.shadowlayout.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:shadowColor="#309B9B9B"
            app:shadowDx="@dimen/distance_dp_2"
            app:shadowDy="@dimen/distance_dp_2"
            app:shadowRadius="@dimen/distance_dp_10"
            app:shadowShape="rectangle"
            app:shadowSide="all">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_dp_195"
                android:layout_marginLeft="@dimen/distance_dp_2"
                android:layout_marginRight="@dimen/distance_dp_2"
                android:background="@drawable/bg_bac_white_10"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/line_just"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/distance_dp_23"
                        android:layout_marginTop="@dimen/distance_dp_37">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/card_just" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/camare" />

                        <ImageView
                            android:id="@+id/img_card_just"
                            android:layout_width="@dimen/distance_dp_126"
                            android:layout_height="@dimen/distance_dp_86" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/distance_dp_34"
                        android:text="身份证正面"
                        android:textColor="@color/app_6D6D6D"
                        android:textSize="@dimen/distance_dp_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/distance_dp_23"
                        android:layout_marginTop="@dimen/distance_dp_37">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/card_back" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/camare" />

                        <ImageView
                            android:id="@+id/img_card_back"
                            android:layout_width="@dimen/distance_dp_126"
                            android:layout_height="@dimen/distance_dp_86" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/distance_dp_34"
                        android:text="身份证反面"
                        android:textColor="@color/app_6D6D6D"
                        android:textSize="@dimen/distance_dp_14" />
                </LinearLayout>
            </LinearLayout>
        </com.lijiankun24.shadowlayout.ShadowLayout>

        <com.lijiankun24.shadowlayout.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:shadowColor="#309B9B9B"
            app:shadowDx="@dimen/distance_dp_2"
            app:shadowDy="@dimen/distance_dp_2"
            app:shadowRadius="@dimen/distance_dp_10"
            app:shadowShape="rectangle"
            app:shadowSide="all">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_dp_2"
                android:layout_marginRight="@dimen/distance_dp_2"
                android:background="@drawable/bg_bac_white_10"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_39"
                    android:layout_marginTop="@dimen/distance_dp_30">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="姓名"
                        android:textColor="@color/app_6D6D6D"
                        android:textSize="@dimen/distance_dp_12" />

                    <EditText
                        android:id="@+id/ed_ems_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:hint="请输入您的姓名"
                        android:inputType="number"
                        android:maxEms="6"
                        android:textColorHint="@color/app_BEBEBE"
                        android:textSize="@dimen/distance_dp_10" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_1"
                    android:background="@color/app_ededed" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_39">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="身份证号"
                        android:textColor="@color/app_6D6D6D"
                        android:textSize="@dimen/distance_dp_12" />

                    <EditText
                        android:id="@+id/ed_card_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:hint="请输入您的身份证号码"
                        android:maxEms="18"
                        android:textColorHint="@color/app_BEBEBE"
                        android:textSize="@dimen/distance_dp_10" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_1"
                    android:background="@color/app_ededed" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_39"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="性别"
                        android:textColor="@color/app_6D6D6D"
                        android:textSize="@dimen/distance_dp_12" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical">

                        <CheckBox
                            android:id="@+id/ck_man"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/distance_dp_25"
                            android:background="@null"
                            android:button="@drawable/shiming_user_classification"
                            android:checked="true"
                            android:paddingLeft="@dimen/distance_dp_5"
                            android:text="男"
                            android:textColor="@color/app_6D6D6D"
                            android:textSize="@dimen/distance_dp_12" />

                        <CheckBox
                            android:id="@+id/ck_woman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:layout_marginRight="@dimen/distance_dp_10"
                            android:button="@drawable/shiming_user_classification"
                            android:paddingLeft="@dimen/distance_dp_5"
                            android:text="女"
                            android:textColor="@color/app_6D6D6D"
                            android:textSize="@dimen/distance_dp_12" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_1"
                    android:background="@color/app_ededed" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_39">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="有效期"
                        android:textColor="@color/app_6D6D6D"
                        android:textSize="@dimen/distance_dp_12" />

                    <EditText
                        android:id="@+id/ed_card_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:hint="请输入身份证有效期"
                        android:textColorHint="@color/app_BEBEBE"
                        android:textSize="@dimen/distance_dp_10" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_1"
                    android:background="@color/app_ededed" />
            </LinearLayout>
        </com.lijiankun24.shadowlayout.ShadowLayout>

        <TextView
            android:id="@+id/te_next_xinxi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_40"
            android:layout_marginBottom="82dp"
            android:layout_marginLeft="@dimen/distance_dp_46"
            android:layout_marginRight="@dimen/distance_dp_46"
            android:layout_marginTop="@dimen/distance_dp_55"
            android:background="@drawable/bg_bac_blue"
            android:gravity="center"
            android:text="保存并下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/distance_dp_15" />

    </LinearLayout>
</ScrollView>