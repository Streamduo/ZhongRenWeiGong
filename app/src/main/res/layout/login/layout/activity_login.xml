<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity">

    <ImageView
        android:id="@+id/img_tuceng"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_190"
        android:background="@mipmap/login_img" />

    <include
        android:id="@+id/title"
        layout="@layout/bus_layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_300"
        android:layout_marginLeft="@dimen/distance_dp_12"
        android:layout_marginRight="@dimen/distance_dp_12"
        android:layout_marginTop="@dimen/distance_dp_151"
        android:background="@mipmap/tuceng_login"
        android:orientation="vertical"
        android:paddingLeft="28dp"
        android:paddingRight="28dp">

        <EditText
            android:id="@+id/ed_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_dp_81"
            android:background="@null"
            android:maxLength="11"
            android:hint="请输入手机号"
            android:inputType="number"
            android:textSize="@dimen/distance_dp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_1"
            android:layout_marginTop="@dimen/distance_dp_10"
            android:background="@color/app_ededed" />

        <EditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_dp_40"
            android:background="@null"
            android:hint="请输入密码"
            android:maxLength="16"
            android:inputType="numberPassword"
            android:textSize="@dimen/distance_dp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_1"
            android:layout_marginTop="@dimen/distance_dp_10"
            android:background="@color/app_ededed" />

        <ImageView
            android:id="@+id/img_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_dp_37"
            android:background="@mipmap/login" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/distance_dp_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/te_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册认证"
            android:textColor="@color/app_369EFF"
            android:textSize="@dimen/distance_dp_12" />

        <View
            android:layout_width="@dimen/distance_dp_1"
            android:layout_height="@dimen/distance_dp_12"
            android:layout_marginLeft="@dimen/distance_dp_6"
            android:layout_marginRight="@dimen/distance_dp_6"
            android:background="@color/app_ededed" />

        <TextView
            android:id="@+id/te_find_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:textColor="@color/app_369EFF"
            android:textSize="@dimen/distance_dp_12" />
    </LinearLayout>
</RelativeLayout>