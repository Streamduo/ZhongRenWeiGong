<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_249"
        android:background="@mipmap/login_top"
        android:orientation="vertical">

        <include
            android:id="@+id/title"
            layout="@layout/bus_layout_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/distance_dp_15"
            android:background="@mipmap/login_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/distance_dp_15"
            android:text="众仁为公、天下大同"
            android:textColor="@color/white"
            android:textSize="@dimen/distance_dp_14" />
    </LinearLayout>

    <EditText
        android:id="@+id/ed_phone_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_40"
        android:layout_marginLeft="@dimen/distance_dp_38"
        android:layout_marginRight="@dimen/distance_dp_38"
        android:layout_marginTop="@dimen/distance_dp_40"
        android:background="@drawable/bg_stroke_d6d6d6_25"
        android:drawableLeft="@mipmap/login_phone"
        android:drawablePadding="@dimen/distance_dp_3"
        android:inputType="number"
        android:maxLength="11"
        android:paddingLeft="@dimen/distance_dp_19"
        android:textColor="@color/FF000000"
        android:textSize="@dimen/distance_dp_16" />

    <RelativeLayout
        android:id="@+id/rl_psd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_42"
        android:layout_marginLeft="@dimen/distance_dp_38"
        android:layout_marginRight="@dimen/distance_dp_38"
        android:layout_marginTop="@dimen/distance_dp_10"
        android:background="@drawable/bg_stroke_d6d6d6_25"
        android:visibility="visible">

        <EditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawableLeft="@mipmap/login_psd"
            android:drawablePadding="@dimen/distance_dp_3"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="@dimen/distance_dp_19"
            android:textColor="@color/FF000000"
            android:textSize="@dimen/distance_dp_16" />

        <ImageView
            android:id="@+id/img_show_psd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/distance_dp_10"
            android:paddingRight="@dimen/distance_dp_19"
            android:src="@mipmap/eye_close" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_ems"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_42"
        android:layout_marginLeft="@dimen/distance_dp_38"
        android:layout_marginRight="@dimen/distance_dp_38"
        android:layout_marginTop="@dimen/distance_dp_10"
        android:background="@drawable/bg_stroke_d6d6d6_25">

        <EditText
            android:id="@+id/ed_ems_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_40"
            android:background="@null"
            android:drawableLeft="@mipmap/login_lock"
            android:drawablePadding="@dimen/distance_dp_3"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="@dimen/distance_dp_19"
            android:textColor="@color/FF000000"
            android:textSize="@dimen/distance_dp_16" />

        <TextView
            android:id="@+id/te_send_ems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/distance_dp_19"
            android:enabled="false"
            android:text="获取验证码"
            android:textColor="@color/app_ABABAB"
            android:textSize="@dimen/distance_dp_10" />
    </RelativeLayout>

    <TextView
        android:id="@+id/te_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_40"
        android:layout_marginLeft="@dimen/distance_dp_38"
        android:layout_marginRight="@dimen/distance_dp_38"
        android:layout_marginTop="@dimen/distance_dp_40"
        android:background="@drawable/bg_bac_c2c2c2_25"
        android:enabled="false"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/distance_dp_12" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_dp_57"
        android:layout_marginRight="@dimen/distance_dp_56"
        android:layout_marginTop="@dimen/distance_dp_3">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录即代表同意"
            android:textColor="@color/app_ABABAB"
            android:textSize="@dimen/distance_dp_10" />

        <TextView
            android:id="@+id/te_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text"
            android:paddingBottom="@dimen/distance_dp_10"
            android:paddingRight="@dimen/distance_dp_15"
            android:text="《维公用户协议》"
            android:textColor="@color/app_FA3C3C"
            android:textSize="@dimen/distance_dp_10" />

        <TextView
            android:id="@+id/te_change_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/distance_dp_10"
            android:paddingLeft="@dimen/distance_dp_15"
            android:text="密码登录"
            android:textColor="@color/app_ABABAB"
            android:textSize="@dimen/distance_dp_10" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/distance_dp_40"
        android:text="使用第三方登录"
        android:textColor="@color/app_D9D9D9"
        android:textSize="@dimen/distance_dp_10" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_dp_38"
        android:layout_marginRight="@dimen/distance_dp_38"
        android:layout_marginTop="@dimen/distance_dp_3">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_1"
            android:layout_centerVertical="true"
            android:background="@color/app_D9D9D9" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_login_wb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/login_wb" />

            <ImageView
                android:id="@+id/img_login_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_dp_19"
                android:layout_marginRight="@dimen/distance_dp_19"
                android:background="@mipmap/login_wx" />

            <ImageView
                android:id="@+id/img_login_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/login_qq" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
