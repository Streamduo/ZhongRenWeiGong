<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.lijiankun24.shadowlayout.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:shadowColor="#309B9B9B"
            app:shadowDx="@dimen/distance_dp_2"
            app:shadowDy="@dimen/distance_dp_2"
            app:shadowRadius="@dimen/distance_dp_10"
            app:shadowShape="rectangle"
            app:shadowSide="all">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_dp_65"
                android:background="@drawable/bg_bac_white_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/distance_dp_18"
                    android:text="区域负责人："
                    android:textColor="@color/app_6D6D6D"
                    android:textSize="@dimen/distance_dp_14" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recy_people_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never"
                    android:layout_marginBottom="@dimen/distance_dp_15"
                    android:layout_marginTop="@dimen/distance_dp_15"></android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </com.lijiankun24.shadowlayout.ShadowLayout>


        <com.lijiankun24.shadowlayout.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:shadowColor="#309B9B9B"
            app:shadowDx="@dimen/distance_dp_2"
            app:shadowDy="@dimen/distance_dp_2"
            app:shadowRadius="@dimen/distance_dp_10"
            app:shadowShape="rectangle"
            app:shadowSide="all">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_bac_white_10"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_42"
                    android:layout_marginTop="@dimen/distance_dp_30">

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="商铺分类"
                        android:textColor="@color/app_6D6D6D"
                        android:textSize="@dimen/distance_dp_12" />

                    <Spinner
                        android:id="@+id/sp_commodity_industry"
                        style="@style/spinner_style_01"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/distance_dp_150"
                        android:layout_toRightOf="@+id/text"></Spinner>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/distance_dp_17"
                        android:layout_marginTop="@dimen/distance_dp_15"
                        android:text="下拉选择商品分类"
                        android:textColor="@color/app_BEBEBE"
                        android:textSize="@dimen/distance_dp_12" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_1"
                    android:background="@color/app_ededed" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="@dimen/distance_dp_42">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="商铺名称"
                        android:textColor="@color/app_6D6D6D"
                        android:textSize="@dimen/distance_dp_12" />

                    <EditText
                        android:id="@+id/ed_shop_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/distance_dp_17"
                        android:background="@null"
                        android:hint="请输入商铺名称"
                        android:gravity="right|center_vertical"
                        android:maxEms="18"
                        android:textColorHint="@color/app_BEBEBE"
                        android:textSize="@dimen/distance_dp_10" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_1"
                    android:background="@color/app_ededed" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_42">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="联系电话"
                        android:textColor="@color/app_6D6D6D"
                        android:textSize="@dimen/distance_dp_12" />

                    <EditText
                        android:id="@+id/ed_phone_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/distance_dp_17"
                        android:background="@null"
                        android:hint="请输入联系电话"
                        android:inputType="number"
                        android:maxEms="11"
                        android:gravity="right|center_vertical"
                        android:textColorHint="@color/app_BEBEBE"
                        android:textSize="@dimen/distance_dp_10" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_1"
                    android:background="@color/app_ededed" />
                <RelativeLayout
                    android:id="@+id/rl_select_area"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_42">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="地区"
                        android:textColor="@color/app_6D6D6D"
                        android:textSize="@dimen/distance_dp_12" />

                    <TextView
                        android:id="@+id/te_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/distance_dp_20"
                        android:text="选择省/市/区"
                        android:layout_centerVertical="true"
                        android:textColor="@color/app_BEBEBE"
                        android:textSize="@dimen/distance_dp_10" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_1"
                    android:background="@color/app_ededed" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="@dimen/distance_dp_42">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="详细地址"
                        android:textColor="@color/app_6D6D6D"
                        android:textSize="@dimen/distance_dp_12" />

                    <EditText
                        android:id="@+id/ed_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/distance_dp_20"
                        android:background="@null"
                        android:hint="请输入街道门牌号等信息"
                        android:textColorHint="@color/app_BEBEBE"
                        android:textSize="@dimen/distance_dp_10" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_1"
                    android:background="@color/app_ededed" />
                <RelativeLayout
                    android:id="@+id/rl_dianzhao"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_42">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="店招上传"
                        android:textColor="@color/app_6D6D6D"
                        android:textSize="@dimen/distance_dp_12" />

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/distance_dp_11"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_upload"
                        android:layout_width="@dimen/distance_dp_75"
                        android:background="@mipmap/upload_img"
                        android:layout_marginRight="@dimen/distance_dp_21"
                        android:layout_height="@dimen/distance_dp_75" />
                    <ImageView
                        android:id="@+id/upload"
                        android:layout_width="@dimen/distance_dp_75"
                        android:background="@color/app_AAAAAA"
                        android:layout_height="@dimen/distance_dp_75" />
                </LinearLayout>
            </LinearLayout>
        </com.lijiankun24.shadowlayout.ShadowLayout>

        <TextView
            android:id="@+id/te_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_40"
            android:layout_marginLeft="@dimen/distance_dp_46"
            android:layout_marginRight="@dimen/distance_dp_46"
            android:layout_marginTop="@dimen/distance_dp_50"
            android:background="@drawable/bg_bac_blue"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/distance_dp_15" />
        <TextView
            android:id="@+id/te_jump"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_40"
            android:layout_marginBottom="82dp"
            android:layout_marginLeft="@dimen/distance_dp_46"
            android:layout_marginRight="@dimen/distance_dp_46"
            android:layout_marginTop="@dimen/distance_dp_12"
            android:background="@drawable/bg_bac_gray"
            android:gravity="center"
            android:text="跳过"
            android:textColor="@color/app_6D6D6D"
            android:textSize="@dimen/distance_dp_15" />
    </LinearLayout>
</ScrollView>