<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login.FindPasswordActivity">

    <include
        android:id="@+id/title"
        layout="@layout/layout_new_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/ed_phone_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_40"
        android:layout_marginLeft="@dimen/distance_dp_38"
        android:layout_marginRight="@dimen/distance_dp_38"
        android:layout_marginTop="@dimen/distance_dp_30"
        android:background="@drawable/bg_stroke_d6d6d6_25"
        android:drawableLeft="@mipmap/login_phone"
        android:drawablePadding="@dimen/distance_dp_3"
        android:inputType="number"
        android:maxLength="11"
        android:paddingLeft="@dimen/distance_dp_19"
        android:textColor="@color/FF000000"
        android:textSize="@dimen/distance_dp_16" />

    <RelativeLayout
        android:id="@+id/rl_ems"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_42"
        android:layout_marginLeft="@dimen/distance_dp_38"
        android:layout_marginRight="@dimen/distance_dp_38"
        android:layout_marginTop="@dimen/distance_dp_10"
        android:background="@drawable/bg_stroke_d6d6d6_25">

        <EditText
            android:id="@+id/ed_ems_num"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_40"
            android:background="@null"
            android:drawableLeft="@mipmap/login_lock"
            android:drawablePadding="@dimen/distance_dp_3"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="@dimen/distance_dp_19"
            android:textColor="@color/FF000000"
            android:textSize="@dimen/distance_dp_16" />

        <TextView
            android:id="@+id/te_send_ems"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/distance_dp_19"
            android:enabled="false"
            android:gravity="center_vertical"
            android:text="获取验证码"
            android:textColor="@color/app_ABABAB"
            android:textSize="@dimen/distance_dp_10" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_psd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_42"
        android:layout_marginLeft="@dimen/distance_dp_38"
        android:layout_marginRight="@dimen/distance_dp_38"
        android:layout_marginTop="@dimen/distance_dp_10"
        android:background="@drawable/bg_stroke_d6d6d6_25">

        <EditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawableLeft="@mipmap/login_psd"
            android:drawablePadding="@dimen/distance_dp_3"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="@dimen/distance_dp_19"
            android:paddingRight="@dimen/distance_dp_30"
            android:textColor="@color/FF000000"
            android:textSize="@dimen/distance_dp_16" />

        <ImageView
            android:id="@+id/img_show_psd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/distance_dp_8"
            android:paddingRight="@dimen/distance_dp_19"
            android:src="@mipmap/eye_close" />
    </RelativeLayout>


    <TextView
        android:id="@+id/te_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_40"
        android:layout_marginLeft="@dimen/distance_dp_38"
        android:layout_marginRight="@dimen/distance_dp_38"
        android:layout_marginTop="@dimen/distance_dp_40"
        android:background="@drawable/bg_bac_c2c2c2_25"
        android:enabled="false"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/distance_dp_12" />
</LinearLayout>