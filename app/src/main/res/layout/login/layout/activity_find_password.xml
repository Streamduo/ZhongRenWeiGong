<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.FindPasswordActivity">

    <ImageView
        android:id="@+id/img_tuceng"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_190"
        android:background="@mipmap/login_img" />

    <include
        android:id="@+id/title"
        layout="@layout/bus_layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_445"
        android:layout_marginLeft="@dimen/distance_dp_12"
        android:layout_marginRight="@dimen/distance_dp_12"
        android:layout_marginTop="@dimen/distance_dp_104"
        android:background="@mipmap/tuceng_fing_psd"
        android:orientation="vertical"
        android:paddingLeft="28dp"
        android:paddingRight="28dp">

        <EditText
            android:id="@+id/ed_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_dp_60"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:nextFocusDown="@+id/ed_ems_num"
            android:maxLength="11"
            android:textSize="@dimen/distance_dp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_1"
            android:layout_marginTop="@dimen/distance_dp_10"
            android:background="@color/app_ededed" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_dp_40">

            <EditText
                android:id="@+id/ed_ems_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/te_send_ems"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:nextFocusDown="@+id/te_send_ems"
                android:maxLength="6"
                android:textSize="@dimen/distance_dp_15" />

            <TextView
                android:id="@+id/te_send_ems"
                android:layout_width="@dimen/distance_dp_60"
                android:layout_height="@dimen/distance_dp_25"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_bac_blue"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="@dimen/distance_dp_10" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_1"
            android:layout_marginTop="@dimen/distance_dp_10"
            android:background="@color/app_ededed" />

        <EditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_dp_40"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="numberPassword"
            android:nextFocusDown="@+id/ed_second_password"
            android:maxLength="16"
            android:textSize="@dimen/distance_dp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_1"
            android:layout_marginTop="@dimen/distance_dp_10"
            android:background="@color/app_ededed" />

        <EditText
            android:id="@+id/ed_second_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_dp_40"
            android:background="@null"
            android:hint="请输入确认密码"
            android:inputType="numberPassword"
            android:maxLength="16"
            android:textSize="@dimen/distance_dp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_1"
            android:layout_marginTop="@dimen/distance_dp_10"
            android:background="@color/app_ededed" />

        <ImageView
            android:id="@+id/img_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_dp_37"
            android:background="@mipmap/qeren" />
    </LinearLayout>
</RelativeLayout>