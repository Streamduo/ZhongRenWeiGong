<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/distance_dp_50"
    android:paddingLeft="@dimen/distance_dp_15"
    android:paddingRight="@dimen/distance_dp_15">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_1"
        android:background="@color/app_e8e8e8" />

    <ImageView
        android:id="@+id/img_bank_icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/distance_dp_21"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/te_bank_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/distance_dp_10"
        android:layout_toRightOf="@+id/img_bank_icon"
        android:text="交通银行  借记卡"
        android:textColor="@color/FF000000"
        android:textSize="@dimen/distance_dp_17" />

    <ImageView
        android:id="@+id/img_select"
        android:layout_width="@dimen/distance_dp_21"
        android:layout_height="@dimen/distance_dp_21"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/duihao"
        android:visibility="gone" />
</RelativeLayout>