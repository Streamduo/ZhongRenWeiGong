<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_dp_15"
        android:layout_marginTop="@dimen/distance_dp_30"
        android:background="@mipmap/exit" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_100"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/distance_dp_172"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/te_camera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/distance_dp_6"
            android:drawableTop="@mipmap/send_video_camera"
            android:gravity="center_horizontal"
            android:text="拍摄"
            android:textColor="@color/FF000000"
            android:textSize="@dimen/distance_dp_15" />

        <TextView
            android:id="@+id/te_photos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/distance_dp_5"
            android:drawableTop="@mipmap/send_video_photots"
            android:gravity="center_horizontal"
            android:text="相册"
            android:textColor="@color/FF000000"
            android:textSize="@dimen/distance_dp_15" />
    </LinearLayout>
</RelativeLayout>