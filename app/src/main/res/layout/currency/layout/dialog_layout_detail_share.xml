<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FF000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/te_cancel"
        android:layout_marginLeft="@dimen/distance_dp_7"
        android:layout_marginRight="@dimen/distance_dp_7"
        android:background="@drawable/bg_bac_white_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_218"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_dp_146"
                android:orientation="vertical"
                android:paddingBottom="@dimen/distance_dp_12"
                android:paddingLeft="@dimen/distance_dp_36"
                android:paddingRight="@dimen/distance_dp_36"
                android:paddingTop="@dimen/distance_dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/te_share_qq"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/distance_dp_6"
                        android:drawableTop="@mipmap/share_qq"
                        android:gravity="center_horizontal"
                        android:text="QQ"
                        android:textColor="@color/FF000000"
                        android:textSize="@dimen/distance_dp_10" />

                    <TextView
                        android:id="@+id/te_share_qq_zone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/distance_dp_5"
                        android:drawableTop="@mipmap/share_qqzone"
                        android:gravity="center_horizontal"
                        android:text="空间"
                        android:textColor="@color/FF000000"
                        android:textSize="@dimen/distance_dp_10" />

                    <TextView
                        android:id="@+id/te_share_wx"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/distance_dp_13"
                        android:drawableTop="@mipmap/share_wx"
                        android:gravity="center_horizontal"
                        android:text="微信"
                        android:textColor="@color/FF000000"
                        android:textSize="@dimen/distance_dp_10" />

                    <TextView
                        android:id="@+id/te_share_pyq"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/distance_dp_7"
                        android:drawableTop="@mipmap/share_wx_pyq"
                        android:gravity="center_horizontal"
                        android:text="朋友圈"
                        android:textColor="@color/FF000000"
                        android:textSize="@dimen/distance_dp_10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/te_share_dingding"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/distance_dp_5"
                        android:drawableTop="@mipmap/share_dd"
                        android:gravity="center_horizontal"
                        android:text="钉钉"
                        android:textColor="@color/FF000000"
                        android:textSize="@dimen/distance_dp_10" />

                    <TextView
                        android:id="@+id/te_share_wb"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/distance_dp_13"
                        android:drawableTop="@mipmap/share_wb"
                        android:gravity="center_horizontal"
                        android:text="空间"
                        android:textColor="@color/FF000000"
                        android:textSize="@dimen/distance_dp_10" />

                    <TextView
                        android:id="@+id/te_share_copy"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/distance_dp_8"
                        android:drawableTop="@mipmap/share_copy"
                        android:gravity="center_horizontal"
                        android:text="复制链接"
                        android:textColor="@color/FF000000"
                        android:textSize="@dimen/distance_dp_10" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_dp_1"
                android:background="@color/app_f0f0f0" />

            <LinearLayout
                android:id="@+id/line_detail_function"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="@dimen/distance_dp_7">

                <TextView
                    android:id="@+id/te_report"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/distance_dp_5"
                    android:drawableTop="@mipmap/report_img"
                    android:gravity="center_horizontal"
                    android:text="举报"
                    android:textColor="@color/FF000000"
                    android:textSize="@dimen/distance_dp_10" />

                <TextView
                    android:id="@+id/te_night_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/distance_dp_5"
                    android:drawableTop="@mipmap/night_style"
                    android:gravity="center_horizontal"
                    android:text="夜间模式"
                    android:textColor="@color/FF000000"
                    android:textSize="@dimen/distance_dp_10" />

                <TextView
                    android:id="@+id/te_font_size"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/distance_dp_5"
                    android:drawableTop="@mipmap/font_size"
                    android:gravity="center_horizontal"
                    android:text="字体设置"
                    android:textColor="@color/FF000000"
                    android:textSize="@dimen/distance_dp_10" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/te_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_48"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/distance_dp_10"
        android:layout_marginLeft="@dimen/distance_dp_7"
        android:layout_marginRight="@dimen/distance_dp_7"
        android:layout_marginTop="@dimen/distance_dp_11"
        android:background="@drawable/bg_bac_white_10"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/FF000000"
        android:textSize="@dimen/distance_dp_17" />
</RelativeLayout>