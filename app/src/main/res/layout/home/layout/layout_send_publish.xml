<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/distance_dp_139"
    android:layout_height="@dimen/distance_dp_100"
    android:background="@mipmap/square_beat_video"
    android:orientation="vertical">

    <TextView
        android:id="@+id/te_beat_img"
        android:layout_width="@dimen/distance_dp_139"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/distance_dp_23"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/beat_img"
        android:drawablePadding="@dimen/distance_dp_18"
        android:gravity="center_vertical"
        android:text="拍图片"
        android:textColor="@color/app_text_33"
        android:textSize="@dimen/distance_dp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="@dimen/distance_dp_2"
        android:layout_marginRight="@dimen/distance_dp_2"
        android:background="@color/white" />

    <TextView
        android:id="@+id/te_beat_video"
        android:layout_width="@dimen/distance_dp_139"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/distance_dp_23"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/beat_video"
        android:drawablePadding="@dimen/distance_dp_18"
        android:gravity="center_vertical"
        android:text="拍视频"
        android:textColor="@color/app_text_33"
        android:textSize="@dimen/distance_dp_16" />

</LinearLayout>