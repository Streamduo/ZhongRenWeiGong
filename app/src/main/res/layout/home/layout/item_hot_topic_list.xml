<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/distance_dp_200"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/distance_dp_12"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_topic_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@mipmap/vegetable_default"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="200:120"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/te_topic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/app_3E3E3E"
        android:textSize="@dimen/distance_dp_16"
        tools:text="树德立人，弘扬中华民族优秀传统美树德立人，弘扬中华民族优秀传统美树德立树德立人，弘扬中华民族优秀传统美德共建社会道德新风尚… " />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_dp_2">

        <TextView
            android:id="@+id/te_topic_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/app_959595"
            android:textSize="@dimen/distance_dp_9"
            tools:text="中央精神文明建设指导委员会" />

        <TextView
            android:id="@+id/te_topic_share"
            android:layout_width="54dp"
            android:layout_height="@dimen/distance_dp_16"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_bac_f74040_12"
            android:gravity="center"
            android:text="文明接力"
            android:textColor="@color/white"
            android:textSize="@dimen/distance_dp_8" />
    </RelativeLayout>
</LinearLayout>