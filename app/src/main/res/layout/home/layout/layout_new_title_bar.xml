<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_FA3C3C">

    <TextView
        android:id="@+id/te_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/new_white_back"
        android:drawablePadding="@dimen/distance_dp_6"
        android:paddingBottom="@dimen/distance_dp_15"
        android:paddingLeft="@dimen/distance_dp_20"
        android:paddingRight="@dimen/distance_dp_20"
        android:paddingTop="@dimen/distance_dp_30" />

    <TextView
        android:id="@+id/te_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/distance_dp_30"
        android:textColor="@color/white"
        android:textSize="@dimen/distance_dp_18" />

    <ImageView
        android:id="@+id/img_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/img_share"
        android:paddingBottom="@dimen/distance_dp_15"
        android:paddingLeft="@dimen/distance_dp_20"
        android:paddingRight="@dimen/distance_dp_12"
        android:visibility="gone"
        android:paddingTop="@dimen/distance_dp_30"
        android:src="@mipmap/big_search_white" />

    <ImageView
        android:id="@+id/img_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/distance_dp_15"
        android:paddingLeft="@dimen/distance_dp_20"
        android:visibility="gone"
        android:paddingRight="@dimen/distance_dp_12"
        android:paddingTop="@dimen/distance_dp_30"
        android:src="@mipmap/detail_share_white" />

</RelativeLayout>