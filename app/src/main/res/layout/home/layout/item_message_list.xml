<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_10"
        android:background="@color/app_F8F9FD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/distance_dp_15">

        <ImageView
            android:layout_width="@dimen/distance_dp_40"
            android:layout_height="@dimen/distance_dp_40"
            tools:background="@mipmap/xitong_msg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_dp_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/te_msg_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_000000"
                android:textSize="@dimen/distance_dp_15"
                tools:text="系统通知" />

            <TextView
                android:id="@+id/te_msg_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_dp_3"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/app_888888"
                android:textSize="@dimen/distance_dp_13"
                tools:text="通知通知赔付通知赔付通知赔付通知赔付通…" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>