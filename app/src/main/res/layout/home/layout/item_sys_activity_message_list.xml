<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/distance_dp_8"
        android:paddingLeft="@dimen/distance_dp_15"
        android:paddingRight="@dimen/distance_dp_12"
        android:paddingTop="@dimen/distance_dp_8">

        <ImageView
            android:id="@+id/img_msg"
            android:layout_width="@dimen/distance_dp_54"
            android:layout_height="@dimen/distance_dp_54"
            tools:background="@mipmap/small_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_dp_10"
            android:layout_toRightOf="@+id/img_msg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/te_msg_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_dp_10"
                android:textColor="@color/FF0F0F0F"
                android:textSize="@dimen/distance_dp_17"
                tools:text="系统通知" />

            <TextView
                android:id="@+id/te_msg_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_dp_3"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/app_ADADAD"
                android:textSize="@dimen/distance_dp_14"
                tools:text="通知通知赔付通知赔付通知赔付通知赔付通反对方的手…" />
        </LinearLayout>

        <TextView
            android:id="@+id/te_msg_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/distance_dp_10"
            android:textColor="@color/app_ADADAD"
            android:textSize="@dimen/distance_dp_14"
            tools:text="昨天" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_1"
        android:layout_marginLeft="@dimen/distance_dp_12"
        android:layout_marginRight="@dimen/distance_dp_15"
        android:background="@color/app_e8e8e8" />
</LinearLayout>