<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".message.SystemMessageDetailActivity">

    <include
        android:id="@+id/title"
        layout="@layout/layout_new_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/te_msg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_dp_17"
        android:layout_marginRight="@dimen/distance_dp_17"
        android:layout_marginTop="@dimen/distance_dp_20"
        android:lineSpacingExtra="5dp"
        android:text="家乐福入驻维公科技平台，家乐福入驻维公科技平台"
        android:textColor="@color/FF000000"
        android:textSize="@dimen/distance_dp_24" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_48"
        android:layout_marginLeft="@dimen/distance_dp_10"
        android:layout_marginTop="@dimen/distance_dp_10">

        <ImageView
            android:id="@+id/img_sender_head"
            android:layout_width="@dimen/distance_dp_48"
            android:layout_height="@dimen/distance_dp_48"
            android:background="@mipmap/big_default_user_head" />

        <TextView
            android:id="@+id/te_send_platform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_dp_8"
            android:layout_marginTop="@dimen/distance_dp_5"
            android:layout_toRightOf="@+id/img_sender_head"
            android:text="维公科技"
            android:textColor="@color/app_22222"
            android:textSize="@dimen/distance_dp_16" />

        <TextView
            android:id="@+id/te_send_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/te_send_platform"
            android:layout_marginLeft="@dimen/distance_dp_8"
            android:layout_marginTop="@dimen/distance_dp_5"
            android:layout_toRightOf="@+id/img_sender_head"
            android:text="1小时前.维公科技平台发布"
            android:textColor="@color/app_text_99"
            android:textSize="@dimen/distance_dp_13" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_dp_20"
        android:orientation="vertical"
        android:paddingLeft="@dimen/distance_dp_15"
        android:paddingRight="@dimen/distance_dp_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_101">

            <ImageView
                android:id="@+id/img_mechanism_head"
                android:layout_width="@dimen/distance_dp_65"
                android:layout_height="@dimen/distance_dp_53"
                android:layout_centerVertical="true"
                android:background="@mipmap/vegetable_default"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_dp_15"
                android:layout_marginTop="@dimen/distance_dp_20"
                android:layout_toRightOf="@+id/img_mechanism_head">

                <TextView
                    android:id="@+id/te_mechanism_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新东方"
                    android:textColor="@color/FF000000"
                    android:textSize="@dimen/distance_dp_17"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/te_mechanism_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/te_mechanism_title"
                    android:layout_marginTop="@dimen/distance_dp_3"
                    android:text="新东方介绍..."
                    android:textColor="@color/app_ACACAC"
                    android:textSize="@dimen/distance_dp_14" />

                <TextView
                    android:id="@+id/te_mechanism_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/te_mechanism_intro"
                    android:layout_marginTop="@dimen/distance_dp_8"
                    android:drawableLeft="@mipmap/blue_address"
                    android:drawablePadding="@dimen/distance_dp_5"
                    android:text="北京市朝阳区劲松"
                    android:textColor="@color/app_ACACAC"
                    android:textSize="@dimen/distance_dp_13" />

                <TextView
                    android:id="@+id/te_mechanism_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/te_mechanism_intro"
                    android:layout_marginLeft="@dimen/distance_dp_13"
                    android:layout_marginTop="@dimen/distance_dp_8"
                    android:layout_toRightOf="@+id/te_mechanism_address"
                    android:drawableLeft="@mipmap/blue_phone"
                    android:drawablePadding="@dimen/distance_dp_5"
                    android:text="12345698742"
                    android:textColor="@color/app_ACACAC"
                    android:textSize="@dimen/distance_dp_13" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>