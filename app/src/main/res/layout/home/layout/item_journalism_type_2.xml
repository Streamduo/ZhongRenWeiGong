<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/distance_dp_15"
        android:paddingLeft="@dimen/distance_dp_17"
        android:paddingRight="@dimen/distance_dp_15"
        android:paddingTop="@dimen/distance_dp_15">

        <TextView
            android:id="@+id/te_journalism_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/distance_dp_135"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/FF000000"
            android:textSize="@dimen/distance_dp_18"
            tools:text="热心好市民帮助老人晾衣服，让人感动落泪" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_72"
            android:layout_marginTop="@dimen/distance_dp_5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_journalism_01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/img_journalism_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/distance_dp_3"
                android:layout_marginRight="@dimen/distance_dp_3"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/img_journalism_03"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/te_from_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingTop="@dimen/distance_dp_4"
                android:textColor="@color/app_text_99"
                android:textSize="@dimen/distance_dp_12"
                tools:text="人民日报海外网    13小时前" />

            <TextView
                android:id="@+id/te_share_journalism"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@mipmap/share_journalism"
                android:drawablePadding="@dimen/distance_dp_6"
                android:paddingLeft="@dimen/distance_dp_15"
                android:paddingTop="@dimen/distance_dp_4"
                android:textColor="@color/app_text_99"
                android:textSize="@dimen/distance_dp_12"
                tools:text="56789" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_1"
        android:layout_marginLeft="@dimen/distance_dp_15"
        android:layout_marginRight="@dimen/distance_dp_15"
        android:background="@color/app_e8e8e8" />

</LinearLayout>