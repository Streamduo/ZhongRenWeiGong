<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.MessageListActivity">

    <ImageView
        android:id="@+id/img_tuceng"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_58"
        android:background="@mipmap/login_img" />

    <include
        android:id="@+id/title"
        layout="@layout/bus_layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_message_list"
        android:layout_width="match_parent"
        android:layout_below="@+id/title"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

</RelativeLayout>