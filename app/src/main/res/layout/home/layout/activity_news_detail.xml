<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.NewsDetailActivity">

    <include
        android:id="@+id/title"
        layout="@layout/layout_new_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_marginBottom="@dimen/distance_dp_50"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <WebView
                android:id="@+id/web_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_dp_30"
                android:orientation="vertical"
                android:paddingLeft="@dimen/distance_dp_12"
                android:paddingRight="@dimen/distance_dp_12">

                <TextView
                    android:id="@+id/te_see_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_7F7F7F"
                    android:textSize="@dimen/distance_dp_9"
                    tools:text="20万阅读" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance_dp_26"
                    android:text="搜索"
                    android:textColor="@color/app_3E3E3E"
                    android:textSize="@dimen/distance_dp_12" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recy_hot_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance_dp_16"
                    android:overScrollMode="never" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recy_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="@dimen/distance_dp_20"
                    android:overScrollMode="never" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_50"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/distance_dp_12"
        android:paddingRight="@dimen/distance_dp_12">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_shoucang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/detail_shoucang" />

            <ImageView
                android:id="@+id/img_dianzan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_dp_28"
                android:layout_marginRight="@dimen/distance_dp_28"
                android:layout_marginTop="@dimen/distance_dp_3"
                android:background="@mipmap/detail_dianzan" />

            <ImageView
                android:id="@+id/img_edit_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_dp_5"
                android:background="@mipmap/detail_edit_comment" />
        </LinearLayout>

        <TextView
            android:id="@+id/te_topic_share"
            android:layout_width="@dimen/distance_dp_100"
            android:layout_height="@dimen/distance_dp_26"
            android:layout_marginRight="@dimen/distance_dp_22"
            android:layout_toLeftOf="@+id/te_detail_peples"
            android:background="@drawable/bg_bac_f74040_12"
            android:gravity="center"
            android:text="助力传播正能量"
            android:textColor="@color/white"
            android:textSize="@dimen/distance_dp_10" />

        <TextView
            android:id="@+id/te_detail_peples"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableTop="@mipmap/detail_peples"
            android:text="助力传播正能量"
            android:textColor="@color/app_676767"
            android:textSize="@dimen/distance_dp_11" />
    </RelativeLayout>
</RelativeLayout>