<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent">

    <include
        layout="@layout/layout_morality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scro_mine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_217"
                    android:background="@mipmap/black_round" />

                <LinearLayout
                    android:id="@+id/line_user_info"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_199"
                    android:layout_marginLeft="@dimen/distance_dp_4"
                    android:layout_marginRight="-4dp"
                    android:layout_marginTop="@dimen/distance_dp_120"
                    android:background="@mipmap/mine_bac"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/te_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/distance_dp_34"
                        android:layout_marginTop="@dimen/distance_dp_25"
                        android:textColor="@color/white"
                        android:textSize="@dimen/distance_dp_16"
                        tools:text="张小山" />

                    <TextView
                        android:id="@+id/te_user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/distance_dp_34"
                        android:layout_marginTop="@dimen/distance_dp_15"
                        android:textColor="@color/white"
                        android:textSize="@dimen/distance_dp_13"
                        tools:text="ID:88888" />

                    <TextView
                        android:id="@+id/te_user_morality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/distance_dp_34"
                        android:textColor="@color/white"
                        android:textSize="@dimen/distance_dp_13"
                        tools:text="道德综合分数：96.5" />

                    <TextView
                        android:id="@+id/te_work_authentication"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/distance_dp_34"
                        android:textColor="@color/white"
                        android:textSize="@dimen/distance_dp_13"
                        tools:text="职业认证：已认证" />

                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/img_user_head"
                android:layout_width="@dimen/distance_dp_74"
                android:layout_height="@dimen/distance_dp_74"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/distance_dp_34"
                android:layout_marginTop="@dimen/distance_dp_100"
                android:background="@mipmap/big_default_user_head" />

            <LinearLayout
                android:id="@+id/line_second"
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_dp_85"
                android:layout_below="@+id/rl_top"
                android:layout_marginTop="-5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/te_jifen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/distance_dp_10"
                    android:drawableTop="@mipmap/mine_jifen"
                    android:gravity="center_horizontal"
                    android:text="积分"
                    android:textColor="@color/app_text_33"
                    android:textSize="@dimen/distance_dp_13" />

                <TextView
                    android:id="@+id/te_mine_coupon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/distance_dp_10"
                    android:drawableTop="@mipmap/mine_coupon"
                    android:gravity="center_horizontal"
                    android:text="优惠券"
                    android:textColor="@color/app_text_33"
                    android:textSize="@dimen/distance_dp_13" />

                <TextView
                    android:id="@+id/te_pay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/distance_dp_10"
                    android:drawableTop="@mipmap/mine_wallet"
                    android:gravity="center_horizontal"
                    android:text="赔付"
                    android:textColor="@color/app_text_33"
                    android:textSize="@dimen/distance_dp_13" />

                <TextView
                    android:id="@+id/te_guanzhu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/distance_dp_10"
                    android:drawableTop="@mipmap/mine_guanzhu"
                    android:gravity="center_horizontal"
                    android:text="关注"
                    android:textColor="@color/app_text_33"
                    android:textSize="@dimen/distance_dp_13" />
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_dp_10"
                android:layout_below="@+id/line_second"
                android:background="#FFF4F6FA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="15dp">

                <RelativeLayout
                    android:id="@+id/rl_mine_daode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_47">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/mine_daode"
                        android:drawablePadding="@dimen/distance_dp_12"
                        android:gravity="center_vertical"
                        android:text="道德体系"
                        android:textColor="@color/app_text_33"
                        android:textSize="@dimen/distance_dp_13" />

                    <TextView
                        android:id="@+id/te_daode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/distance_dp_5"
                        android:drawableRight="@mipmap/gray_back"
                        android:textColor="@color/app_B2B2B2"
                        android:textSize="@dimen/distance_dp_14"
                        tools:text="96.5分" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_mine_renzheng"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_47">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/mine_personal_renzheng"
                        android:drawablePadding="@dimen/distance_dp_13"
                        android:gravity="center_vertical"
                        android:text="个人认证"
                        android:textColor="@color/app_text_33"
                        android:textSize="@dimen/distance_dp_13" />

                    <TextView
                        android:id="@+id/te_mine_renzheng_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/distance_dp_8"
                        android:layout_toLeftOf="@+id/img"
                        android:drawableLeft="@mipmap/blue_authentication"
                        android:drawablePadding="@dimen/distance_dp_5"
                        android:gravity="center_vertical"
                        android:text="已认证"
                        android:visibility="gone"
                        android:textColor="@color/app_B2B2B2"
                        android:textSize="@dimen/distance_dp_14" />

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/gray_back" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_business_renzheng"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_47">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/mine_business_renzheng"
                        android:drawablePadding="@dimen/distance_dp_15"
                        android:gravity="center_vertical"
                        android:text="商业认证"
                        android:textColor="@color/app_text_33"
                        android:textSize="@dimen/distance_dp_13" />

                    <TextView
                        android:id="@+id/te_business_renzheng_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/distance_dp_8"
                        android:layout_toLeftOf="@+id/img_01"
                        android:drawableLeft="@mipmap/blue_authentication"
                        android:drawablePadding="@dimen/distance_dp_5"
                        android:gravity="center_vertical"
                        android:text="已认证"
                        android:visibility="gone"
                        android:textColor="@color/app_B2B2B2"
                        android:textSize="@dimen/distance_dp_14" />

                    <ImageView
                        android:id="@+id/img_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/gray_back" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_mine_industry"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_47">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/mine_shop"
                        android:drawablePadding="@dimen/distance_dp_14"
                        android:gravity="center_vertical"
                        android:text="店铺管理"
                        android:textColor="@color/app_text_33"
                        android:textSize="@dimen/distance_dp_13" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/gray_back" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_mine_fankui"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_47">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/mine_fankui"
                        android:drawablePadding="@dimen/distance_dp_15"
                        android:gravity="center_vertical"
                        android:text="意见反馈"
                        android:textColor="@color/app_text_33"
                        android:textSize="@dimen/distance_dp_13" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/gray_back" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_mine_about_our"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_47">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/mine_about"
                        android:drawablePadding="@dimen/distance_dp_12"
                        android:gravity="center_vertical"
                        android:text="关于我们"
                        android:textColor="@color/app_text_33"
                        android:textSize="@dimen/distance_dp_13" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/gray_back" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_change_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_47"
                    android:layout_marginBottom="@dimen/distance_dp_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/change_login"
                        android:drawablePadding="@dimen/distance_dp_15"
                        android:gravity="center_vertical"
                        android:text="切换账号"
                        android:textColor="@color/app_text_33"
                        android:textSize="@dimen/distance_dp_13" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/gray_back" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>