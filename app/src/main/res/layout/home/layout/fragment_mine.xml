<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_187"
        android:background="@mipmap/login_img">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_47"
            android:layout_marginLeft="@dimen/distance_dp_18"
            android:layout_marginRight="@dimen/distance_dp_22"
            android:layout_marginTop="@dimen/distance_dp_64"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_user_head"
                android:layout_width="@dimen/distance_dp_47"
                android:layout_height="@dimen/distance_dp_47"
                android:background="@mipmap/user_default_head" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/distance_dp_16">

                <TextView
                    android:id="@+id/te_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/distance_dp_16"
                    tools:text="张小山" />

                <TextView
                    android:id="@+id/te_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/distance_dp_13"
                    tools:text="ID:88888" />

                <ImageView
                    android:id="@+id/mine_renzheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/distance_dp_22"
                    android:background="@mipmap/mine_renzheng" />

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/line_member"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_62"
        android:layout_marginLeft="@dimen/distance_dp_15"
        android:layout_marginRight="@dimen/distance_dp_15"
        android:layout_marginTop="@dimen/distance_dp_159"
        android:background="@mipmap/mine_member_bac"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/distance_dp_16"
            android:background="@mipmap/mine_member" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/distance_dp_9">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员道德体系"
                android:textColor="@color/white"
                android:textSize="@dimen/distance_dp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_marginTop="@dimen/distance_dp_4"
                android:text="根据诚信/生活行为/职业行为更新数据"
                android:textColor="@color/white"
                android:textSize="@dimen/distance_dp_10" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/distance_dp_12"
                android:background="@mipmap/see_detail" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_member"
        android:orientation="vertical">

        <com.lijiankun24.shadowlayout.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:shadowColor="#309B9B9B"
            app:shadowDx="@dimen/distance_dp_2"
            app:shadowDy="@dimen/distance_dp_2"
            app:shadowRadius="@dimen/distance_dp_10"
            app:shadowShape="rectangle"
            app:shadowSide="all">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_bac_white_10"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="12dp">

                <RelativeLayout
                    android:id="@+id/rl_mine_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_40"
                    android:layout_marginTop="@dimen/distance_dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/mine_wallet"
                        android:drawablePadding="@dimen/distance_dp_21"
                        android:gravity="center_vertical"
                        android:text="赔付钱包"
                        android:textColor="@color/app_text_33"
                        android:textSize="@dimen/distance_dp_13" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/right_back" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_mine_pay_record"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_40"
                    android:layout_marginTop="@dimen/distance_dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/mine_pay_record"
                        android:drawablePadding="@dimen/distance_dp_26"
                        android:gravity="center_vertical"
                        android:text="我的消费"
                        android:textColor="@color/app_text_33"
                        android:textSize="@dimen/distance_dp_13" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/right_back" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_mine_industry"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_40"
                    android:layout_marginTop="@dimen/distance_dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/mine_industry"
                        android:drawablePadding="@dimen/distance_dp_24"
                        android:gravity="center_vertical"
                        android:text="行业管理"
                        android:textColor="@color/app_text_33"
                        android:textSize="@dimen/distance_dp_13" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/right_back" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_mine_help_center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_40"
                    android:layout_marginTop="@dimen/distance_dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/mine_help_center"
                        android:drawablePadding="@dimen/distance_dp_22"
                        android:gravity="center_vertical"
                        android:text="帮助中心"
                        android:textColor="@color/app_text_33"
                        android:textSize="@dimen/distance_dp_13" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/right_back" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_mine_set"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_dp_40"
                    android:layout_marginBottom="@dimen/distance_dp_10"
                    android:layout_marginTop="@dimen/distance_dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/mine_set"
                        android:drawablePadding="@dimen/distance_dp_23"
                        android:gravity="center_vertical"
                        android:text="设置"
                        android:textColor="@color/app_text_33"
                        android:textSize="@dimen/distance_dp_13" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/right_back" />
                </RelativeLayout>
            </LinearLayout>
        </com.lijiankun24.shadowlayout.ShadowLayout>
    </LinearLayout>

</RelativeLayout>