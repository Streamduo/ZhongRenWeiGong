<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_220">

        <com.tmall.ultraviewpager.UltraViewPager
            android:id="@+id/ad_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparents"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_dp_29">

            <TextView
                android:id="@+id/te_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingLeft="@dimen/distance_dp_10"
                android:textSize="@dimen/distance_dp_17"
                android:drawableRight="@mipmap/sanjiao"
                android:drawablePadding="@dimen/distance_dp_5"
                android:text="北京" />

            <TextView
                android:id="@+id/te_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_dp_25"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/img_saoyosao"
                android:layout_toRightOf="@+id/te_address"
                android:background="@drawable/bg_bac_white"
                android:drawableLeft="@mipmap/search"
                android:drawablePadding="@dimen/distance_dp_5"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="请输入商家名称或分类"
                android:textSize="@dimen/distance_dp_12" />

            <ImageView
                android:id="@+id/img_saoyosao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toLeftOf="@+id/img_message"
                android:paddingLeft="23dp"
                android:paddingRight="14dp"
                android:src="@mipmap/saoyisao" />

            <ImageView
                android:id="@+id/img_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="18dp"
                android:src="@mipmap/message" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_dp_11"
        android:layout_marginRight="@dimen/distance_dp_11"
        android:layout_marginTop="@dimen/distance_dp_12"
        android:orientation="vertical"
        android:paddingBottom="@dimen/distance_dp_22">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_75"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/te_food"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/distance_dp_6"
                android:layout_weight="1"
                android:background="@color/app_fbfbfb"
                android:drawableLeft="@mipmap/food"
                android:drawablePadding="@dimen/distance_dp_12"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/distance_dp_22"
                android:text="@string/food" />

            <TextView
                android:id="@+id/te_teach"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/app_fbfbfb"
                android:drawableLeft="@mipmap/school"
                android:drawablePadding="@dimen/distance_dp_12"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/distance_dp_22"
                android:text="@string/teach" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_75"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/te_house"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/distance_dp_6"
                android:layout_weight="1"
                android:background="@color/app_fbfbfb"
                android:drawableLeft="@mipmap/house"
                android:drawablePadding="@dimen/distance_dp_12"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/distance_dp_22"
                android:text="@string/house" />

            <TextView
                android:id="@+id/te_car"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/app_fbfbfb"
                android:drawableLeft="@mipmap/car"
                android:drawablePadding="@dimen/distance_dp_12"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/distance_dp_22"
                android:text="@string/car" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_75"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/te_retailers"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/distance_dp_6"
                android:layout_weight="1"
                android:background="@color/app_fbfbfb"
                android:drawableLeft="@mipmap/retailers"
                android:drawablePadding="@dimen/distance_dp_12"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/distance_dp_22"
                android:text="@string/net" />

            <TextView
                android:id="@+id/te_travel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/app_fbfbfb"
                android:drawableLeft="@mipmap/hotel"
                android:drawablePadding="@dimen/distance_dp_12"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/distance_dp_22"
                android:text="@string/travel" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_10"
        android:background="@color/app_text_f8" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/distance_dp_30"
        android:background="@mipmap/home_bottom" />

</LinearLayout>