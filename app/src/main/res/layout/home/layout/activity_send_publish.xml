<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.SendPublishActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/te_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/new_black_back"
            android:drawablePadding="15dp"
            android:paddingLeft="@dimen/distance_dp_15" />

        <TextView
            android:id="@+id/img_send"
            android:layout_width="@dimen/distance_dp_58"
            android:layout_height="@dimen/distance_dp_32"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/distance_dp_10"
            android:background="@drawable/bg_bac_blue"
            android:gravity="center"
            android:text="发表"
            android:textColor="@color/white" />
    </RelativeLayout>

    <EditText
        android:id="@+id/ed_report_intro"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_240"
        android:background="@null"
        android:gravity="left"
        android:hint="内容描述..."
        android:paddingLeft="@dimen/distance_dp_15"
        android:paddingTop="@dimen/distance_dp_5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_1"
        android:layout_marginLeft="@dimen/distance_dp_15"
        android:layout_marginRight="@dimen/distance_dp_15"
        android:background="@color/app_e8e8e8" />

    <RelativeLayout
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_dp_15"
        android:layout_marginTop="@dimen/distance_dp_10">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_journalism_cover"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@mipmap/vegetable_default"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="127:107"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@mipmap/yinying"
                app:layout_constraintDimensionRatio="127:107"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <RelativeLayout
                    android:id="@+id/rl_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/radio_gray">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/play" />
                </RelativeLayout>
            </RelativeLayout>
        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_1"
        android:layout_marginLeft="@dimen/distance_dp_15"
        android:layout_marginRight="@dimen/distance_dp_15"
        android:layout_marginTop="@dimen/distance_dp_10"
        android:background="@color/app_e8e8e8" />

    <TextView
        android:id="@+id/te_mine_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_dp_15"
        android:layout_marginTop="@dimen/distance_dp_10"
        android:drawableLeft="@mipmap/big_address"
        android:drawablePadding="@dimen/distance_dp_5"
        android:text="北京市朝阳区劲松"
        android:textColor="@color/app_ACACAC"
        android:textSize="@dimen/distance_dp_15" />
</LinearLayout>