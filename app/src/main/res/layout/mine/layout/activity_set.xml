<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mine.set.SetActivity">

    <include
        layout="@layout/home_layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_10"
        android:background="@color/app_F4F4F4" />

    <RelativeLayout
        android:id="@+id/rl_upload_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_57"
        android:layout_marginLeft="@dimen/distance_dp_10"
        android:layout_marginRight="@dimen/distance_dp_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="头像"
            android:textColor="@color/app_text_33"
            android:textSize="@dimen/distance_dp_15" />

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/distance_dp_43"
            android:layout_height="@dimen/distance_dp_43"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/distance_dp_17"
            android:layout_toLeftOf="@+id/img_back" />

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/right_back" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/distance_dp_10"
        android:background="@color/app_F4F4F4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_52"
        android:layout_marginLeft="@dimen/distance_dp_10"
        android:layout_marginRight="@dimen/distance_dp_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机号"
            android:textColor="@color/app_text_33"
            android:textSize="@dimen/distance_dp_15" />

        <TextView
            android:id="@+id/te_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/distance_dp_17"
            android:text="13023838759"
            android:textColor="@color/app_222222"
            android:textSize="@dimen/distance_dp_15" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/distance_dp_10"
        android:background="@color/app_F4F4F4" />

    <RelativeLayout
        android:id="@+id/rl_change_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_52"
        android:layout_marginLeft="@dimen/distance_dp_10"
        android:layout_marginRight="@dimen/distance_dp_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="变更手机号"
            android:textColor="@color/app_text_33"
            android:textSize="@dimen/distance_dp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/distance_dp_17"
            android:drawableRight="@mipmap/right_back" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/distance_dp_10"
        android:background="@color/app_F4F4F4" />

    <RelativeLayout
        android:id="@+id/rl_password_manager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_52"
        android:layout_marginLeft="@dimen/distance_dp_10"
        android:layout_marginRight="@dimen/distance_dp_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="密码管理"
            android:textColor="@color/app_text_33"
            android:textSize="@dimen/distance_dp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/distance_dp_17"
            android:drawableRight="@mipmap/right_back" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_10"
        android:background="@color/app_F4F4F4" />

    <RelativeLayout
        android:id="@+id/rl_from_company"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_52"
        android:layout_marginLeft="@dimen/distance_dp_10"
        android:layout_marginRight="@dimen/distance_dp_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="关于众仁为公"
            android:textColor="@color/app_text_33"
            android:textSize="@dimen/distance_dp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/distance_dp_17"
            android:drawableRight="@mipmap/right_back" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_F4F4F4">

        <TextView
            android:id="@+id/te_exit_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_48"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/distance_dp_30"
            android:layout_marginLeft="@dimen/distance_dp_25"
            android:layout_marginRight="@dimen/distance_dp_25"
            android:background="@drawable/bg_bac_blue"
            android:gravity="center"
            android:text="退出账号"
            android:textColor="@color/white"
            android:textSize="@dimen/distance_dp_18" />
    </RelativeLayout>

</LinearLayout>