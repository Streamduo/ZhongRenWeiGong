<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mine.set.ChangePhoneActivity">

    <include
        android:id="@+id/title"
        layout="@layout/home_layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/line_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/distance_dp_30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86  "
                android:textColor="@color/app_text_33"
                android:textSize="@dimen/distance_dp_16" />

            <TextView
                android:id="@+id/te_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13023838759"
                android:textColor="@color/app_text_33"
                android:textSize="@dimen/distance_dp_16" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/distance_dp_10"
            android:text="请填写短信验证码"
            android:textColor="@color/app_text_33"
            android:textSize="@dimen/distance_dp_16" />

        <com.project.zhongrenweigong.view.NumberEditText
            android:id="@+id/ed_ems_num"
            android:layout_width="@dimen/distance_dp_237"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/distance_dp_25" />

        <TextView
            android:id="@+id/te_send_ok_01"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_48"
            android:layout_marginLeft="@dimen/distance_dp_25"
            android:layout_marginRight="@dimen/distance_dp_25"
            android:layout_marginTop="@dimen/distance_dp_42"
            android:background="@drawable/bg_bac_e1_5"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/app_B0B0B0"
            android:textSize="@dimen/distance_dp_18" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/distance_dp_41"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接收验证码大约需要"
                android:textColor="@color/app_text_33"
                android:textSize="@dimen/distance_dp_13" />

            <TextView
                android:id="@+id/te_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60"
                android:textColor="@color/app_FF0000"
                android:textSize="@dimen/distance_dp_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秒"
                android:textColor="@color/app_text_33"
                android:textSize="@dimen/distance_dp_13" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/ed_new_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_53"
            android:layout_marginLeft="@dimen/distance_dp_25"
            android:layout_marginRight="@dimen/distance_dp_25"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入您新的手机号码"
            android:textSize="@dimen/distance_dp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_1"
            android:layout_marginLeft="@dimen/distance_dp_25"
            android:layout_marginRight="@dimen/distance_dp_25"
            android:background="@color/app_F4F4F4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_53"
            android:layout_marginLeft="@dimen/distance_dp_25"
            android:layout_marginRight="@dimen/distance_dp_25"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ed_ems_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:textSize="@dimen/distance_dp_15" />

            <TextView
                android:id="@+id/te_send_new_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/distance_dp_48"
                android:text="获取验证码"
                android:textColor="@color/app_54618D"
                android:textSize="@dimen/distance_dp_15" />
        </LinearLayout>

        <TextView
            android:id="@+id/te_send_ok_02"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_48"
            android:layout_marginLeft="@dimen/distance_dp_25"
            android:layout_marginRight="@dimen/distance_dp_25"
            android:layout_marginTop="@dimen/distance_dp_42"
            android:background="@drawable/bg_bac_1282ff_5"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/distance_dp_18" />
    </LinearLayout>


</RelativeLayout>