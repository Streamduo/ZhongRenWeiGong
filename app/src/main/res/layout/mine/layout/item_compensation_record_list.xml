<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_67"
        android:paddingBottom="@dimen/distance_dp_13"
        android:paddingLeft="@dimen/distance_dp_18"
        android:paddingRight="@dimen/distance_dp_15"
        android:paddingTop="@dimen/distance_dp_15">

        <TextView
            android:id="@+id/te_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_text_33"
            android:textSize="@dimen/distance_dp_14"
            tools:text="提现" />

        <TextView
            android:id="@+id/te_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/app_747474"
            android:textSize="@dimen/distance_dp_12"
            tools:text="2019-10-28 17:18:02" />

        <TextView
            android:id="@+id/te_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/distance_dp_10"
            android:drawableRight="@mipmap/right_back"
            android:textColor="@color/app_22222"
            android:textSize="@dimen/distance_dp_17"
            android:textStyle="bold"
            tools:text="+60.00" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_1"
        android:background="@color/app_E9E9E9"
         />
</LinearLayout>