<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".mine.ProfessionalCertificationActivity">

    <include
        android:id="@+id/title"
        layout="@layout/layout_mine_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/distance_dp_40"
        android:background="@mipmap/weigong_icon_fang" />

    <TextView
        android:id="@+id/te_version_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="维公科技 1.0"
        android:textColor="@color/FF000000"
        android:textSize="@dimen/distance_dp_23"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_1"
        android:layout_marginLeft="@dimen/distance_dp_25"
        android:layout_marginRight="@dimen/distance_dp_25"
        android:layout_marginTop="@dimen/distance_dp_71"
        android:background="@color/app_e8e8e8" />

    <RelativeLayout
        android:id="@+id/rl_weigong"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_58">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/distance_dp_42"
            android:text="维公科技"
            android:textColor="@color/FF000000"
            android:textSize="@dimen/distance_dp_18" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/distance_dp_25"
            android:background="@mipmap/gray_back" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_1"
        android:layout_marginLeft="@dimen/distance_dp_41"
        android:layout_marginRight="@dimen/distance_dp_25"
        android:background="@color/app_e8e8e8" />
</LinearLayout>