<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mine.ReflectActivity">

    <include
        layout="@layout/layout_mine_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_34"
        android:layout_marginTop="@dimen/distance_dp_15">

        <ImageView
            android:id="@+id/img_reflect_bankcard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/ttixian_bankcard" />

        <ImageView
            android:id="@+id/img_reflect_wx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/tixian_wx" />

        <ImageView
            android:id="@+id/img_reflect_zfb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/tixian_zfb" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_bank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_84"
        android:layout_marginLeft="@dimen/distance_dp_16"
        android:layout_marginRight="@dimen/distance_dp_16"
        android:layout_marginTop="@dimen/distance_dp_27"
        android:background="@drawable/bg_bac_fafafa">

        <TextView
            android:id="@+id/te_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_dp_28"
            android:paddingTop="@dimen/distance_dp_20"
            android:text="到账银行卡"
            android:textColor="@color/app_text_33"
            android:textSize="@dimen/distance_dp_14" />

        <TextView
            android:id="@+id/te_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_dp_19"
            android:layout_marginTop="@dimen/distance_dp_18"
            android:layout_toRightOf="@+id/te_text"
            tools:text="工商银行(0908)"
            android:textColor="@color/app_text_33"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/te_bank_name"
            android:layout_marginRight="@dimen/distance_dp_14"
            android:background="@mipmap/right_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/te_bank_name"
            android:layout_marginLeft="@dimen/distance_dp_40"
            android:layout_marginTop="@dimen/distance_dp_10"
            android:layout_toRightOf="@+id/te_text"
            android:text="预计2小时内到账"
            android:textSize="@dimen/distance_dp_14" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_dp_40"
        android:layout_marginTop="@dimen/distance_dp_35"
        android:text="提现金额"
        android:textColor="@color/app_text_33"
        android:textSize="@dimen/distance_dp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_dp_40"
        android:layout_marginTop="@dimen/distance_dp_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/app_text_33"
            android:textSize="@dimen/distance_dp_33"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_reflect_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="number"
            tools:text="200"
            android:textColor="@color/app_text_33"
            android:textSize="@dimen/distance_dp_33"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_1"
        android:layout_marginTop="@dimen/distance_dp_15"
        android:background="@color/app_ededed" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_45"
        android:layout_marginLeft="@dimen/distance_dp_14">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="可提现金额："
            android:textColor="@color/app_text_33"
            android:textSize="@dimen/distance_dp_13" />

        <TextView
            android:id="@+id/te_reflect_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text"
            android:textColor="@color/app_F9103C"
            android:textSize="@dimen/distance_dp_17"
            tools:text="50.00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/te_reflect_money"
            android:text="元"
            android:textColor="@color/app_text_33"
            android:textSize="@dimen/distance_dp_12" />

        <TextView
            android:id="@+id/te_reflect_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/distance_dp_15"
            android:text="提现记录"
            android:textColor="@color/app_text_8d"
            android:textSize="@dimen/distance_dp_13" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_dp_14"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/tixian_warn"
            android:drawablePadding="@dimen/distance_dp_5"
            android:text="每天单笔提现金额不可超过1万元，" />

        <TextView
            android:id="@+id/te_reflect_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部提现"
            android:textColor="@color/app_0591CC" />
    </LinearLayout>

    <TextView
        android:id="@+id/te_reflect_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_48"
        android:layout_marginLeft="@dimen/distance_dp_24"
        android:layout_marginRight="@dimen/distance_dp_24"
        android:layout_marginTop="@dimen/distance_dp_46"
        android:background="@drawable/bg_bac_blue"
        android:gravity="center"
        android:text="确认提现"
        android:textColor="@color/white"
        android:textSize="@dimen/distance_dp_18"
        android:textStyle="bold" />

</LinearLayout>