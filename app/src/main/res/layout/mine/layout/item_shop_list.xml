<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/distance_dp_15"
    android:paddingRight="@dimen/distance_dp_15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_70">

        <ImageView
            android:id="@+id/img_shop_head"
            android:layout_width="@dimen/distance_dp_58"
            android:layout_height="@dimen/distance_dp_50"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_dp_8"
            android:layout_marginRight="@dimen/distance_dp_60"
            android:layout_marginTop="@dimen/distance_dp_8"
            android:layout_toRightOf="@+id/img_shop_head">

            <TextView
                android:id="@+id/te_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学而思"
                android:textColor="@color/FF000000"
                android:textSize="@dimen/distance_dp_14" />

            <TextView
                android:id="@+id/te_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/te_shop_name"
                android:layout_marginTop="@dimen/distance_dp_3"
                android:text="学而思介绍..."
                android:textColor="@color/app_272626"
                android:textSize="@dimen/distance_dp_10" />

            <TextView
                android:id="@+id/te_shop_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/te_intro"
                android:layout_marginTop="@dimen/distance_dp_4"
                android:drawableLeft="@mipmap/blue_address"
                android:drawablePadding="@dimen/distance_dp_5"
                android:text="北京市朝阳区劲松分地方地方"
                android:maxLength="13"
                android:textColor="@color/app_ACACAC"
                android:textSize="@dimen/distance_dp_10" />

            <TextView
                android:id="@+id/te_shop_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/te_intro"
                android:layout_marginLeft="@dimen/distance_dp_13"
                android:layout_marginTop="@dimen/distance_dp_4"
                android:layout_toRightOf="@+id/te_shop_address"
                android:drawableLeft="@mipmap/blue_phone"
                android:drawablePadding="@dimen/distance_dp_5"
                android:text="12345698742"
                android:maxLength="15"
                android:textColor="@color/app_ACACAC"
                android:textSize="@dimen/distance_dp_10" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_ceping_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/ceping_tag" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_1"
        android:background="@color/app_bfbfbf" />
</LinearLayout>