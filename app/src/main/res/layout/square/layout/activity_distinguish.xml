<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/result_view"
    tools:context=".login.DistinguishActivity">

    <include
        layout="@layout/layout_new_white_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="@dimen/distance_dp_66"
        android:layout_height="@dimen/distance_dp_66"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/distance_dp_21">

        <TextView
            android:id="@+id/te_sort"
            android:layout_width="@dimen/distance_dp_66"
            android:layout_height="@dimen/distance_dp_66"
            android:background="@mipmap/short_round"
            android:gravity="center"
            android:text="点击拍摄"
            android:textColor="@color/white"
            android:textSize="@dimen/distance_dp_8" />

        <ImageView
            android:id="@+id/img_pause"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/sheying" />

    </RelativeLayout>
</RelativeLayout>