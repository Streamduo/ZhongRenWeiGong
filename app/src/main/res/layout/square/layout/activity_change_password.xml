<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mine.set.ChangePasswordActivity">

    <include
        layout="@layout/home_layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_50"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/distance_dp_20"
            android:text="旧密码"
            android:textColor="@color/app_222222"
            android:textSize="@dimen/distance_dp_14" />

        <EditText
            android:id="@+id/ed_used_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/distance_dp_40"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColor="@color/app_222222"
            android:textSize="@dimen/distance_dp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_1"
        android:layout_marginLeft="@dimen/distance_dp_10"
        android:layout_marginRight="@dimen/distance_dp_10"
        android:background="@color/app_ededed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_50"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/distance_dp_20"
            android:text="新密码"
            android:textColor="@color/app_222222"
            android:textSize="@dimen/distance_dp_14" />

        <EditText
            android:id="@+id/ed_new_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/distance_dp_40"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColor="@color/app_222222"
            android:textSize="@dimen/distance_dp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_1"
        android:layout_marginLeft="@dimen/distance_dp_10"
        android:layout_marginRight="@dimen/distance_dp_10"
        android:background="@color/app_ededed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_50"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/distance_dp_20"
            android:text="确认密码"
            android:textColor="@color/app_222222"
            android:textSize="@dimen/distance_dp_14" />

        <EditText
            android:id="@+id/ed_queren_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/distance_dp_25"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入确认密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColor="@color/app_222222"
            android:textSize="@dimen/distance_dp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_1"
        android:background="@color/app_ededed" />

    <TextView
        android:id="@+id/te_send_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_48"
        android:layout_marginLeft="@dimen/distance_dp_25"
        android:layout_marginRight="@dimen/distance_dp_25"
        android:layout_marginTop="@dimen/distance_dp_42"
        android:background="@drawable/bg_bac_1282ff_5"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/distance_dp_18" />

</LinearLayout>