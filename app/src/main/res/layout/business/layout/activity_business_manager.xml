<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_F4F4F4"
    tools:context=".business.manager.BusinessManagerActivity">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_242"
        android:background="@mipmap/login_img">

        <include
            android:id="@+id/title"
            layout="@layout/bus_layout_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_business_head"
            android:layout_width="@dimen/distance_dp_70"
            android:layout_height="@dimen/distance_dp_70"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/distance_dp_28"
            android:background="@mipmap/user_default_head"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_business_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/distance_dp_14"
            android:text="商家店铺名称"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_135"
        android:layout_below="@+id/rl_head"
        android:layout_marginTop="@dimen/distance_dp_10"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_70"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_manage_commodity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="@dimen/distance_dp_15"
                android:paddingLeft="@dimen/distance_dp_15"
                android:paddingRight="@dimen/distance_dp_18"
                android:paddingTop="@dimen/distance_dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品管理"
                    android:textColor="@color/app_text_33"
                    android:textSize="@dimen/distance_dp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="随时修改商品信息"
                    android:textColor="@color/app_text_99"
                    android:textSize="@dimen/distance_dp_12" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/commodity_manager" />
            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/app_DCDCDC" />

            <RelativeLayout
                android:id="@+id/rl_shop_xinxi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="@dimen/distance_dp_15"
                android:paddingLeft="@dimen/distance_dp_15"
                android:paddingRight="@dimen/distance_dp_18"
                android:paddingTop="@dimen/distance_dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="门店信息"
                    android:textColor="@color/app_text_33"
                    android:textSize="@dimen/distance_dp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="门店信息修改"
                    android:textColor="@color/app_text_99"
                    android:textSize="@dimen/distance_dp_12" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/business_intro" />
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/app_DCDCDC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_70"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_shop_notice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="@dimen/distance_dp_15"
                android:paddingLeft="@dimen/distance_dp_15"
                android:paddingRight="@dimen/distance_dp_18"
                android:paddingTop="@dimen/distance_dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家公告"
                    android:textColor="@color/app_text_33"
                    android:textSize="@dimen/distance_dp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="商家活动公告"
                    android:textColor="@color/app_text_99"
                    android:textSize="@dimen/distance_dp_12" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/business_notice" />
            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/app_DCDCDC" />

            <RelativeLayout
                android:id="@+id/rl_worker_manager"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="@dimen/distance_dp_15"
                android:paddingLeft="@dimen/distance_dp_15"
                android:paddingRight="@dimen/distance_dp_18"
                android:paddingTop="@dimen/distance_dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="员工管理"
                    android:textColor="@color/app_text_33"
                    android:textSize="@dimen/distance_dp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="门店员工绑定"
                    android:textColor="@color/app_text_99"
                    android:textSize="@dimen/distance_dp_12" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/worker_manager" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>