<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/distance_dp_82">

    <LinearLayout
        android:id="@+id/line_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/distance_dp_10"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_business_fenlei_head"
            android:layout_width="@dimen/distance_dp_43"
            android:layout_height="@dimen/distance_dp_43"
            android:background="@mipmap/big_bussiness_head" />

        <TextView
            android:id="@+id/te_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_dp_3"
            android:lines="1"
            android:maxEms="4"
            android:text="快餐便当"
            android:textColor="@color/app_text_66"
            android:textSize="@dimen/distance_dp_11" />
    </LinearLayout>
</RelativeLayout>