<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_F4F4F4"
    android:orientation="vertical"
    tools:context=".business.manager.EditStoreIntroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/distance_dp_30">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/distance_dp_25">

            <TextView
                android:id="@+id/te_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/black_back"
                android:drawablePadding="6dp"
                android:paddingLeft="@dimen/distance_dp_20"
                android:text="返回"
                android:textColor="@color/app_222222"
                android:textSize="@dimen/distance_dp_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="门店信息"
                android:textColor="@color/app_222222"
                android:textSize="@dimen/distance_dp_18" />

            <ImageView
                android:id="@+id/img_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/distance_dp_23"
                android:paddingRight="@dimen/distance_dp_10"
                android:src="@mipmap/tijiao" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_upload_logo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_45"
            android:layout_marginLeft="@dimen/distance_dp_10"
            android:layout_marginRight="@dimen/distance_dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="上传商家LOGO"
                android:textColor="@color/app_text_33"
                android:textSize="@dimen/distance_dp_15" />

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="@dimen/distance_dp_43"
                android:layout_height="@dimen/distance_dp_43"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/distance_dp_17"
                android:layout_toLeftOf="@+id/img_back" />

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/right_back" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/distance_dp_10"
            android:background="@color/app_ECECEC" />

        <RelativeLayout
            android:id="@+id/rl_fenlei"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_45"
            android:layout_marginLeft="@dimen/distance_dp_10"
            android:layout_marginRight="@dimen/distance_dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="店铺分类"
                android:textColor="@color/app_text_33"
                android:textSize="@dimen/distance_dp_15" />

            <TextView
                android:id="@+id/te_fenlei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/distance_dp_17"
                android:drawableRight="@mipmap/right_back"
                android:hint="点击选择店铺分类"
                android:textColor="@color/app_222222"
                android:textSize="@dimen/distance_dp_15" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/distance_dp_10"
            android:background="@color/app_ECECEC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_45"
            android:layout_marginLeft="@dimen/distance_dp_10"
            android:layout_marginRight="@dimen/distance_dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺名称"
                android:textColor="@color/app_text_33"
                android:textSize="@dimen/distance_dp_15" />

            <EditText
                android:id="@+id/ed_store_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/distance_dp_25"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输入你的店铺名称"
                android:textColor="@color/app_222222"
                android:textSize="@dimen/distance_dp_15" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/distance_dp_10"
            android:background="@color/app_ECECEC" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_45"
            android:layout_marginLeft="@dimen/distance_dp_10"
            android:layout_marginRight="@dimen/distance_dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="营业时间"
                android:textColor="@color/app_text_33"
                android:textSize="@dimen/distance_dp_15" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/distance_dp_25"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/te_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="开始时间"
                    android:textColor="@color/app_222222"
                    android:textSize="@dimen/distance_dp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/distance_dp_10"
                    android:layout_marginRight="@dimen/distance_dp_10"
                    android:text="—"
                    android:textColor="@color/app_222222" />

                <TextView
                    android:id="@+id/te_nd_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="结束时间"
                    android:textColor="@color/app_222222"
                    android:textSize="@dimen/distance_dp_15" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/distance_dp_10"
            android:background="@color/app_ECECEC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_45"
            android:layout_marginLeft="@dimen/distance_dp_10"
            android:layout_marginRight="@dimen/distance_dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话"
                android:textColor="@color/app_text_33"
                android:textSize="@dimen/distance_dp_15" />

            <EditText
                android:id="@+id/ed_store_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/distance_dp_25"
                android:background="@null"
                android:maxLength="11"
                android:inputType="number"
                android:gravity="center_vertical|right"
                android:hint="请输入你的联系电话"
                android:textColor="@color/app_222222"
                android:textSize="@dimen/distance_dp_15" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/distance_dp_10"
            android:background="@color/app_ECECEC" />

        <RelativeLayout
            android:id="@+id/rl_select_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_45"
            android:layout_marginLeft="@dimen/distance_dp_10"
            android:layout_marginRight="@dimen/distance_dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="地区"
                android:textColor="@color/app_text_33"
                android:textSize="@dimen/distance_dp_15" />

            <TextView
                android:id="@+id/te_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/distance_dp_17"
                android:drawableRight="@mipmap/right_back"
                android:hint="点击选择所在地区"
                android:textColor="@color/app_222222"
                android:textSize="@dimen/distance_dp_15" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/distance_dp_10"
            android:background="@color/app_ECECEC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_45"
            android:layout_marginLeft="@dimen/distance_dp_10"
            android:layout_marginRight="@dimen/distance_dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细地址"
                android:textColor="@color/app_text_33"
                android:textSize="@dimen/distance_dp_15" />

            <EditText
                android:id="@+id/ed_store_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/distance_dp_25"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输入详细地址，例如街道，门牌号"
                android:textColor="@color/app_222222"
                android:textSize="@dimen/distance_dp_15" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/distance_dp_10"
            android:background="@color/app_ECECEC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_70"
            android:layout_marginLeft="@dimen/distance_dp_10"
            android:layout_marginRight="@dimen/distance_dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺描述"
                android:textColor="@color/app_text_33"
                android:textSize="@dimen/distance_dp_15" />

            <EditText
                android:id="@+id/ed_store_intro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/distance_dp_25"
                android:layout_marginRight="@dimen/distance_dp_25"
                android:background="@null"
                android:gravity="center_vertical"
                android:textColor="@color/app_222222"
                android:textSize="@dimen/distance_dp_15" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_dp_1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/distance_dp_10"
            android:background="@color/app_ECECEC" />

    </LinearLayout>


</LinearLayout>