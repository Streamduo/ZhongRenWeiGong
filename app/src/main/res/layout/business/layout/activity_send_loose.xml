<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".business.manager.SendLooseActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_23A0F2">

        <include
            android:id="@+id/title"
            layout="@layout/layout_new_white_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_dp_25" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_dp_45"
                android:layout_marginLeft="@dimen/distance_dp_10"
                android:layout_marginRight="@dimen/distance_dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/distance_dp_10"
                    android:text="活动名称"
                    android:textColor="@color/app_text_33"
                    android:textSize="@dimen/distance_dp_15" />

                <EditText
                    android:id="@+id/ed_activity_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/distance_dp_50"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请在此输入活动名称"
                    android:textColor="@color/app_222222"
                    android:textSize="@dimen/distance_dp_15" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_dp_1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/distance_dp_10"
                android:background="@color/app_ECECEC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_dp_45"
                android:layout_marginLeft="@dimen/distance_dp_10"
                android:layout_marginRight="@dimen/distance_dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/distance_dp_10"
                    android:text="开始时间"
                    android:textColor="@color/app_text_33"
                    android:textSize="@dimen/distance_dp_15" />

                <TextView
                    android:id="@+id/te_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/distance_dp_50"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择开始时间"
                    android:textColor="@color/app_222222"
                    android:textSize="@dimen/distance_dp_15" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_dp_1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/distance_dp_10"
                android:background="@color/app_ECECEC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_dp_45"
                android:layout_marginLeft="@dimen/distance_dp_10"
                android:layout_marginRight="@dimen/distance_dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/distance_dp_10"
                    android:text="结束时间"
                    android:textColor="@color/app_text_33"
                    android:textSize="@dimen/distance_dp_15" />

                <TextView
                    android:id="@+id/te_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/distance_dp_50"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择结束时间"
                    android:textColor="@color/app_222222"
                    android:textSize="@dimen/distance_dp_15" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_dp_1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/distance_dp_10"
                android:background="@color/app_ECECEC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_dp_45"
                android:layout_marginLeft="@dimen/distance_dp_10"
                android:layout_marginRight="@dimen/distance_dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/distance_dp_10"
                    android:text="地址"
                    android:textColor="@color/app_text_33"
                    android:textSize="@dimen/distance_dp_15" />

                <EditText
                    android:id="@+id/ed_activity_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/distance_dp_80"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入地址"
                    android:textColor="@color/app_222222"
                    android:textSize="@dimen/distance_dp_15" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_dp_1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/distance_dp_10"
                android:background="@color/app_ECECEC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_dp_45"
                android:layout_marginLeft="@dimen/distance_dp_10"
                android:layout_marginRight="@dimen/distance_dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/distance_dp_10"
                    android:text="活动内容"
                    android:textColor="@color/app_text_33"
                    android:textSize="@dimen/distance_dp_15" />

            </LinearLayout>

            <EditText
                android:id="@+id/ed_activity_intro"
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_dp_95"
                android:layout_marginLeft="@dimen/distance_dp_20"
                android:background="@mipmap/activity_bac"
                android:gravity="left"
                android:hint="在此输入内容"
                android:paddingLeft="@dimen/distance_dp_5"
                android:paddingTop="@dimen/distance_dp_5"
                android:textColor="@color/app_222222"
                android:textSize="@dimen/distance_dp_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_dp_45"
                android:layout_marginLeft="@dimen/distance_dp_10"
                android:layout_marginRight="@dimen/distance_dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/distance_dp_10"
                    android:text="上传图片"
                    android:textColor="@color/app_text_33"
                    android:textSize="@dimen/distance_dp_15" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_img_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_dp_20"
                android:layout_marginRight="@dimen/distance_dp_17"
                android:overScrollMode="never" />

            <TextView
                android:id="@+id/te_send"
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_dp_44"
                android:layout_marginBottom="@dimen/distance_dp_23"
                android:layout_marginLeft="@dimen/distance_dp_20"
                android:layout_marginRight="@dimen/distance_dp_20"
                android:layout_marginTop="@dimen/distance_dp_58"
                android:background="@drawable/bg_bac_339aff_10"
                android:gravity="center"
                android:text="发布"
                android:textColor="@color/white"
                android:textSize="@dimen/distance_dp_19" />
        </LinearLayout>


    </ScrollView>
</LinearLayout>