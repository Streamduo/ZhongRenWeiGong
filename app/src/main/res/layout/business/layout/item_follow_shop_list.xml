<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/distance_dp_329"
    android:background="@mipmap/yinying_fang"
    android:orientation="vertical"
    android:paddingBottom="@dimen/distance_dp_40"
    android:paddingLeft="@dimen/distance_dp_19"
    android:paddingRight="@dimen/distance_dp_19"
    android:paddingTop="@dimen/distance_dp_19">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_60">

        <ImageView
            android:id="@+id/img_mechanism_head"
            android:layout_width="@dimen/distance_dp_80"
            android:layout_height="@dimen/distance_dp_60"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            tools:background="@mipmap/vegetable_default" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_dp_10"
            android:layout_toRightOf="@+id/img_mechanism_head">

            <TextView
                android:id="@+id/te_mechanism_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/FF000000"
                android:textSize="@dimen/distance_dp_17"
                android:textStyle="bold"
                tools:text="新东方" />

            <TextView
                android:id="@+id/te_mechanism_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/te_mechanism_title"
                android:layout_marginTop="@dimen/distance_dp_5"
                android:drawableLeft="@mipmap/blue_address"
                android:drawablePadding="@dimen/distance_dp_5"
                android:text="北京市朝阳区劲松"
                android:textColor="@color/app_ACACAC"
                android:textSize="@dimen/distance_dp_10" />

            <TextView
                android:id="@+id/te_mechanism_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/te_mechanism_title"
                android:layout_marginLeft="@dimen/distance_dp_13"
                android:layout_marginTop="@dimen/distance_dp_5"
                android:layout_toRightOf="@+id/te_mechanism_address"
                android:drawableLeft="@mipmap/blue_phone"
                android:drawablePadding="@dimen/distance_dp_5"
                android:text="12345698742"
                android:textColor="@color/app_ACACAC"
                android:textSize="@dimen/distance_dp_10" />

            <TextView
                android:id="@+id/te_shop_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/te_mechanism_address"
                android:layout_marginTop="@dimen/distance_dp_3"
                android:drawableLeft="@mipmap/shop_time"
                android:drawablePadding="@dimen/distance_dp_5"
                android:textColor="@color/app_ACACAC"
                android:textSize="@dimen/distance_dp_10"
                tools:text="营业时间：早9:00-晚9:00" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_197"
        android:layout_marginTop="@dimen/distance_dp_7"
        android:orientation="horizontal">

        <android.support.constraint.ConstraintLayout
            android:layout_width="@dimen/distance_dp_196"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_one"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="196:197"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:background="@mipmap/vegetable_default" />
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_two"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:background="@mipmap/vegetable_default" />

            <ImageView
                android:id="@+id/img_three"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:background="@mipmap/vegetable_default" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>