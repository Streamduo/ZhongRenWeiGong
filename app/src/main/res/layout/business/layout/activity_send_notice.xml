<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".business.manager.SendNoticeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/distance_dp_25">

        <TextView
            android:id="@+id/te_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/black_back"
            android:drawablePadding="6dp"
            android:paddingLeft="@dimen/distance_dp_20"
            android:text="返回"
            android:textColor="@color/app_text_66"
            android:textSize="@dimen/distance_dp_15" />

        <TextView
            android:id="@+id/te_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发布公告"
            android:textColor="@color/app_text_33"
            android:textSize="@dimen/distance_dp_19" />

        <ImageView
            android:id="@+id/img_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/distance_dp_23"
            android:paddingRight="@dimen/distance_dp_10"
            android:src="@mipmap/send_notice" />
    </RelativeLayout>

    <EditText
        android:id="@+id/ed_notice_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_53"
        android:layout_marginLeft="@dimen/distance_dp_14"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请输入公告标题"
        android:singleLine="true"
        android:textColor="@color/app_777777"
        android:textSize="@dimen/distance_dp_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_1"
        android:layout_marginLeft="@dimen/distance_dp_14"
        android:background="@color/app_E9E9E9" />

    <EditText
        android:id="@+id/ed_notice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_145"
        android:layout_marginLeft="@dimen/distance_dp_14"
        android:layout_marginTop="@dimen/distance_dp_15"
        android:background="@null"
        android:gravity="left"
        android:hint="请输入公告内容，字数要求15~200字。"
        android:maxLength="200"
        android:textColor="@color/app_777777"
        android:textSize="@dimen/distance_dp_15" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_1"
        android:layout_marginLeft="@dimen/distance_dp_14"
        android:background="@color/app_E9E9E9" />
</LinearLayout>