<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/distance_dp_15"
    android:paddingRight="@dimen/distance_dp_15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_80">

        <ImageView
            android:id="@+id/img_mechanism_head"
            android:layout_width="@dimen/distance_dp_65"
            android:layout_height="@dimen/distance_dp_50"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_dp_10"
            android:layout_marginTop="@dimen/distance_dp_10"
            android:layout_toRightOf="@+id/img_mechanism_head">

            <TextView
                android:id="@+id/te_mechanism_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新东方"
                android:textColor="@color/FF000000"
                android:textSize="@dimen/distance_dp_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/te_mechanism_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/te_mechanism_title"
                android:layout_marginTop="@dimen/distance_dp_5"
                android:text="新东方介绍..."
                android:textColor="@color/app_272626"
                android:textSize="@dimen/distance_dp_10" />

            <TextView
                android:id="@+id/te_mechanism_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/te_mechanism_intro"
                android:layout_marginTop="@dimen/distance_dp_5"
                android:drawableLeft="@mipmap/blue_address"
                android:drawablePadding="@dimen/distance_dp_5"
                android:text="北京市朝阳区劲松"
                android:textColor="@color/app_ACACAC"
                android:textSize="@dimen/distance_dp_10" />

            <TextView
                android:id="@+id/te_mechanism_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/te_mechanism_intro"
                android:layout_marginLeft="@dimen/distance_dp_13"
                android:layout_marginTop="@dimen/distance_dp_5"
                android:layout_toRightOf="@+id/te_mechanism_address"
                android:drawableLeft="@mipmap/blue_phone"
                android:drawablePadding="@dimen/distance_dp_5"
                android:text="12345698742"
                android:textColor="@color/app_ACACAC"
                android:textSize="@dimen/distance_dp_10" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_1"
        android:background="@color/app_bfbfbf" />
</LinearLayout>