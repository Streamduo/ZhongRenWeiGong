<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/distance_dp_15"
    android:paddingRight="@dimen/distance_dp_15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_80">

        <ImageView
            android:id="@+id/img_mechanism_head"
            android:layout_width="@dimen/distance_dp_61"
            android:layout_height="@dimen/distance_dp_64"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_dp_10"
            android:layout_marginTop="@dimen/distance_dp_6"
            android:layout_toRightOf="@+id/img_mechanism_head">

            <TextView
                android:id="@+id/te_personal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小明"
                android:textColor="@color/FF000000"
                android:textSize="@dimen/distance_dp_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/te_personal_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/te_personal_title"
                android:layout_marginTop="@dimen/distance_dp_3"
                android:text="ID:113456789"
                android:textColor="@color/app_272626"
                android:textSize="@dimen/distance_dp_10" />

            <TextView
                android:id="@+id/te_mechanism_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/te_personal_id"
                android:layout_marginTop="@dimen/distance_dp_3"
                android:text="职业认证:已认证"
                android:textColor="@color/FF000000"
                android:textSize="@dimen/distance_dp_10" />

            <TextView
                android:id="@+id/te_mechanism_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/te_mechanism_address"
                android:layout_marginTop="@dimen/distance_dp_3"
                android:text="机构:已认证"
                android:textColor="@color/FF000000"
                android:textSize="@dimen/distance_dp_10" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_dp_1"
        android:background="@color/app_bfbfbf" />
</LinearLayout>